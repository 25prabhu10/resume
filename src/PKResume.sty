% Document Layout and Margins
\usepackage{geometry}
\geometry{a4paper, margin=.5in, includehead, includefoot}

% Font-family and Font-size
\usepackage[default,semibold]{sourcesanspro}

% No page number
\pagenumbering{gobble}

% Paragraph Formatting
\raggedright\raggedbottom{} % left and top align no indent

% Colours
\usepackage{xcolor}
\definecolor{highlight}{RGB}{61, 90, 128} % change colour https://g.co/kgs/aoqdi7
\definecolor{secondarycolor}{RGB}{100, 100, 100} % Add secondary color
\definecolor{textcolor}{RGB}{0, 0, 0}

% List Formatting
\usepackage{enumitem}
\setlength{\tabcolsep}{0in}
\renewcommand{\arraystretch}{1.5}

% Tighter spacing than itemize
\setlist[itemize]{    leftmargin=1em,labelsep=.5em,    itemsep=2pt,    topsep=0.5em,    parsep=1pt,    label=\textcolor{highlight}{$\bullet$}  }
\newenvironment{zitemize}
{
    \begin{itemize} }{
    \end{itemize}
}

% Section Formatting
\usepackage[nostruts]{titlesec}
\titlespacing*{\section}{0em}{0em}{0.5em}
\titleformat{\section}{\color{highlight}\raggedright\large}{}{0em}{}[\vspace{-0.75em}\hrulefill]

% Subsection Formatting
\titlespacing*{\subsection}{0em}{0em}{0em}
\titleformat{\subsection}{\bfseries}{}{0em}{}

% Subsection Title with Date Range
\newcommand{\daterange}[1]{\textit{\small\textcolor{secondarycolor}{#1}}}
\newcommand{\subsectiontitle}[2]{\subsection*{#1 \hfill \daterange{#2}}}

% Subtext with Location
\newcommand{\location}[1]{\textit{\small\textcolor{secondarycolor}{#1}}}
\newcommand{\subsectionsubtext}[1]{\location{#1}\par\nopagebreak\vspace{.3em}}

% Bold Formatting
\newcommand{\skills}[1]{{\bfseries #1}}

% Header and Footer
\usepackage{fancyhdr}
\fancypagestyle{first_page}{
    \fancyhf{}

    \lhead{
        \Phone{} \\
        \href{mailto:\Email}{\Email} \\
        \City{}
    }

    \chead{
        \centering
        {\Huge\textbf{\color{textcolor}\Name}} \\
        \vspace{.5em}
        {\color{highlight}\Large\bfseries{\Role}}
    }

    \rhead{
        \href{https://github.com/\GitHub}{github.com/\GitHub} \\
        \href{https://www.linkedin.com/in/\LinkedIn}{linkedin.com/in/\LinkedIn}
    }

    \renewcommand{\headrulewidth}{2pt}
    \renewcommand{\headrule}{\color{highlight}\hrule height \headrulewidth\vspace{-\headrulewidth}}

    \setlength{\headheight}{55pt}
    \setlength{\headsep}{8pt}
    \setlength{\footskip}{63pt}
}

\fancypagestyle{others} {
    \fancyhf{}
    \renewcommand{\headrulewidth}{0pt}
    \setlength{\headheight}{0pt}
    \setlength{\headsep}{0pt}
    \setlength{\footskip}{63pt}
}

